@model DeployNinjaProject.Models.Circle
h2>Beräkning av Cirkelns Area och Omkrets</h2> 
@using (Html.BeginForm("Calculate", "Circle", FormMethod.Post))
{
		 <label for="radius">Ange cirkelns radie:</label>

	<input type="number" id="radius" name="radius" step="0.01" required />

	<input type="submit" value="Beräkna" />
} @if (ViewBag.Circumference != null && ViewBag.Area != null)
{
		 <h3>Omkrets: @ViewBag.Circumference</h3>

	<h3>Area: @ViewBag.Area</h3>
}